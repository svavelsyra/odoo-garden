<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_garden_form" model="ir.ui.view">
        <field name="model">garden</field>
        <field name="arch" type="xml">
            <form string="Garden">
                <header />
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="plantbed_ids" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page name="My page" string="My page">
                            <group>
                                <group>
                                    <field name="create_date" widget="date" />
                                    <field name="create_uid" />
                                </group>
                                <group class="text-nowrap">
                                    <field name="__last_update" widget="date" />
                                    <field name="write_uid" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- TODO: Chatter integration later?
                <div class="oe_chatter">
                    <field 
                        name="message_follower_ids" 
                        options="{'post_refresh': True}" 
                        groups="base.group_user" 
                    />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div> 
                -->
            </form>
        </field>
    </record>

    <record id="view_garden_kanban" model="ir.ui.view">
        <field name="model">garden</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_details oe_kanban_global_click o_has_icon">
                            <strong>
                                <field name="name" />
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_garden_search" model="ir.ui.view">
        <field name="model">garden</field>
        <field name="arch" type="xml">
            <search string="Matter">
                <field name="name" />
                <separator />
            </search>
        </field>
    </record>

    <record id="view_garden_tree" model="ir.ui.view">
        <field name="model">garden</field>
        <field name="arch" type="xml">
            <tree string="Record-keeping">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_garden_view" model="ir.actions.act_window">
        <field name="name">Garden</field>
        <field name="res_model">garden</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Garden
            </p>
        </field>
    </record>

    <menuitem 
        id="menu_odoo_garden"
        name="Garden"
        sequence="50"
    />

    <menuitem 
        id="menu_garden"
        action="action_garden_view"
        name="Gardens" 
        parent="menu_odoo_garden"
        sequence="10"
    />

</odoo>